<mj-section background-color="#fff">
  <mj-column>
    <mj-text align="center" padding-top="0px">
      <%= I18n.t("email_notification_mailer.followed_user.followed_you", name: @user.profile.name, username: @user.username) %>
    </mj-text>
    <mj-image src="<%= ann_avatar_image_url(@user, width: 140, format: :jpg) %>" align="center" width="70px" border-radius="50%" href="<%= profile_url(@user.username, utm_source: 'email_notification', utm_campaign: 'followed_user', utm_medium: 'email', domain: local_domain) %>"></mj-image>
    <mj-text align="center" font-size="24px" font-weight="600" padding-bottom="7px"><%= "#{@user.profile.name}" %></mj-text>
    <mj-text align="center" padding-top="0px"><%= "@#{@user.username}" %></mj-text>
    <mj-text align="center" line-height="22px"><%= "#{@user.profile.description}" %></mj-text>
    <mj-button href="<%= profile_url(@user.username, utm_source: 'email_notification', utm_campaign: 'followed_user', utm_medium: 'email', domain: local_domain) %>" background-color="#f85b73"><%= I18n.t("email_notification_mailer.followed_user.view_profile") %></mj-button>
  </mj-column>
</mj-section>
